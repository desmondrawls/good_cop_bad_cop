<h2>Search for a Cop</h2>
<%= form_tag(root_path, :method => "get") do %>
  <%= text_field_tag :badge_number, params[:badge_number], placeholder: "Badge Number" %>
  <p>- OR -</p>
  <%= text_field_tag :name, params[:name], placeholder: "Name" %>
  <p><%= submit_tag "Search" %></p>
<% end %>

<ul class="cops">
  <% if @cops %>
    <% @cops.each do |cop| %>
    <li><%= link_to cop.name, cop %>, <%= cop.badge_number %>, <%= cop.precinct_name %>, <%= cop.approval_rating %></li>
    <% end %>
  <% end %>
</ul>   